<%= form_for(@user_badge, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user_badge.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= n_('Error prohibited this user from being saved:','Errors prohibited this user_badge from being saved:', @user_badge.errors.count) %></h4>
      <ul>
      <% @user_badge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :unlocked_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :unlocked_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :badge_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :badge_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :user_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exam_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :exam_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notified, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :notified, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
