<div class="page-header">
  <%= link_to degrees_path, :class => 'btn btn-default' do %>
    <span class="fa fa-list-alt"></span>
    <%= _('Back') %>
  <% end %>
  <%= link_to edit_degree_path(@degree), :class => 'btn btn-primary' do %>
    <span class="fa fa-pencil"></span>
  <%= _('Edit') %>
  <% end %>
  <h1><%= _('Show degree') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= _('Name:') %></dt>
  <dd><%= @degree.name %></dd>
  <dt><%= _('Description:') %></dt>
  <dd><%= @degree.description %></dd>
</dl>
