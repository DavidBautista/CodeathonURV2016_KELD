<%= form_for(@question, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= n_('Error prohibited this user from being saved:','Errors prohibited this question from being saved:', @question.errors.count) %></h4>
      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sender_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sender_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exam_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :exam_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :question, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :question, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :correct_answer, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :correct_answer, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :answer_1, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :answer_1, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :answer_2, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :answer_2, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :answer_3, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :answer_3, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
