<div class="page-header">
  <% if current_user.id == @user.id %>
    <%= link_to edit_user_path(@user), :class => 'btn btn-primary' do %>
      <span class="fa fa-pencil"></span>
      <%= _('Edit') %>
    <% end -%>
  <% end -%>

  <h1><%= current_user.name %></h1>
</div>


<div class="row">
  <div class="col-xs-3 col-md-2 col-lg-2">
    <%= image_tag "level-#{current_user.level}.png", class: 'img-responsive' %>
  </div>
  <div class="col-xs-9">
    <h3><%= _('Level') %> <%= current_user.level %> - <%= level_name(current_user.level)%></h3>
    <div class="progress" style="width: 250px; max-width: 100%;">
      <span style="position: absolute; left: 25px;"><%= "exp: #{current_user.experience.to_s}/#{exp_for_next_level(current_user.level)}" %></span>

      <div class="progress-bar" role="progressbar" aria-valuenow="70"
           aria-valuemin="0" aria-valuemax="100" style="width:<%= current_user.experience*100/exp_for_next_level(current_user.level) %>%; color: black;">
      </div>

    </div>
    <p><%= _('Registered at: ') %><%= current_user.created_at.to_date.strftime("%d-%m-%Y") %>.</p>
    <p><strong><%= current_user.tests.count %></strong> <%= _('tests done.') %></p>
    <p><strong><%= current_user.questions.count %></strong> <%= _('questions sent.') %></p>
  </div>
</div>

<div class="row mt20">
  <div class="col-xs-12">
    Espacio para badges
  </div>
</div>