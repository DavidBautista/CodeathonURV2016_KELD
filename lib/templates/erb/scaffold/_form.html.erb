<%%= form_for(@<%= singular_table_name %>, :html => { :class => "form-horizontal" }) do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%%= n_('Error prohibited this user from being saved:','Errors prohibited this <%= singular_table_name %> from being saved:', @<%= singular_table_name %>.errors.count) %></h4>
      <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
        <li><%%= msg %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

<% attributes.each do |attribute| -%>
  <div class="form-group">
    <%%= f.label :<%= attribute.name %>, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, :class => "form-control" %>
    </div>
  </div>
<% end -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<%% end %>
