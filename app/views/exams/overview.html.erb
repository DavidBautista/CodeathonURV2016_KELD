
<h1><%= @exam.name %> <small><%= @exam.end_date.to_date.strftime("%d-%m-%Y") %></small></h1>

<div class="row mt20">
  <div class="col-xs-12 col-sm-6">
    <%= link_to _('New test'), "#", class: 'btn btn-danger btn-lg' %>
    <%= link_to _('New test of errors'), "#", class: 'btn btn-danger btn-lg' %>

    <div class="table-responsive mt20">

      <%#TODO si tiene tests que muestre la tabla, sino al buho echando la bronca %>
      <table class="table table-striped table-bordered table-hover datatable">
        <thead>
        <tr>
          <th><%= _('Date') %></th>
          <th style="width: 30%;"><%= _('Results') %></th>
        </tr>
        </thead>

        <tbody>
        <%= content_tag_for(:tr, @exam.tests.where(user: current_user)) do |test| %>
          <td><%= test.created_at.to_formatted_s(:db) %></td>
          <td><span class="badge green"><%= test.correct_answers_count %>2</span> <span class="badge"><%= test.incorrect_answers_count %>5</span></td>
        <% end -%>
        </tbody>
      </table>
    </div>

  </div>
  <div class="col-xs-12 col-sm-6">
    <%= link_to _('Send questions'), "#", class: 'btn btn-danger btn-lg' %>
    <div class="table-responsive mt20">
      <table class="table table-striped table-bordered table-hover datatable">
        <thead>
        <tr>
          <th><%= _('Question') %></th>
          <th style="width: 30%;"></th>
        </tr>
        </thead>

        <tbody>
        <%= content_tag_for(:tr, @exam.questions.where(sender_id: current_user.id)) do |question| %>
          <td><%=h truncate(question.question, :length => 80) %></td>


          <td>
            <%= link_to fa_icon('search'), question, class: 'btn btn-primary btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('View') %>
            <%= link_to fa_icon('pencil'), edit_question_path(question), class: 'btn btn-warning btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Edit') %>
            <%= link_to fa_icon('remove'), question, method: :delete, data: { confirm: _('Are you sure that you want delete this?') }, class: 'btn btn-danger btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Delete') %>
          </td>
        <% end -%>
        </tbody>
      </table>
    </div>

  </div>
</div>
