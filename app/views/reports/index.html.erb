<div class="page-header">
  <%= link_to new_report_path, :class => 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= _('New Report') %>
  <% end %>
  <h1><%= _('Reports') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th><%= _('Question') %></th>
        <th><%= _('Sender') %></th>
        <th><%= _('Option') %></th>
        <th><%= _('Description') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reports) do |report| %>
        <td><%= report.question_id %></td>
        <td><%= report.sender_id %></td>
        <td><%= report.option %></td>
        <td><%= report.description %></td>
        <td>
        <%= link_to fa_icon('search'), report, class: 'btn btn-primary btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('View') %>
        <%= link_to fa_icon('pencil'), edit_report_path(report), class: 'btn btn-warning btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Edit') %>
        <%= link_to fa_icon('remove'), report, method: :delete, data: { confirm: _('Are you sure that you want delete this?') }, class: 'btn btn-danger btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Delete') %>
        </td>
      <% end -%>
    </tbody>
  </table>
</div>
