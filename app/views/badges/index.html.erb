<div class="page-header">
  <%= link_to new_badge_path, :class => 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= _('New Badge') %>
  <% end %>
  <h1><%= _('Badges') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th><%= _('Name') %></th>
        <th><%= _('Icon path') %></th>
        <th><%= _('Description') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @badges) do |badge| %>
        <td><%= badge.name %></td>
        <td><%= badge.icon_path %></td>
        <td><%= badge.description %></td>
        <td>
        <%= link_to fa_icon('search'), badge, class: 'btn btn-primary btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('View') %>
        <%= link_to fa_icon('pencil'), edit_badge_path(badge), class: 'btn btn-warning btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Edit') %>
        <%= link_to fa_icon('remove'), badge, method: :delete, data: { confirm: _('Are you sure that you want delete this?') }, class: 'btn btn-danger btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Delete') %>
        </td>
      <% end -%>
    </tbody>
  </table>
</div>
