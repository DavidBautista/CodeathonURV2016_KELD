<%= form_for(@user_subject, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user_subject.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= n_('Error prohibited this user from being saved:','Errors prohibited this user_subject from being saved:', @user_subject.errors.count) %></h4>
      <ul>
      <% @user_subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :user_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subject_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :subject_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :role, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
