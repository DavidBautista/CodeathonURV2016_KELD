<div class="page-header">
  <%= link_to new_user_subject_path, :class => 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= _('New User subject') %>
  <% end %>
  <h1><%= _('User_subjects') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th><%= _('User') %></th>
        <th><%= _('Subject') %></th>
        <th><%= _('Role') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @user_subjects) do |user_subject| %>
        <td><%= user_subject.user_id %></td>
        <td><%= user_subject.subject_id %></td>
        <td><%= user_subject.role %></td>
        <td>
        <%= link_to fa_icon('search'), user_subject, class: 'btn btn-primary btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('View') %>
        <%= link_to fa_icon('pencil'), edit_user_subject_path(user_subject), class: 'btn btn-warning btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Edit') %>
        <%= link_to fa_icon('remove'), user_subject, method: :delete, data: { confirm: _('Are you sure that you want delete this?') }, class: 'btn btn-danger btn-xs', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => _('Delete') %>
        </td>
      <% end -%>
    </tbody>
  </table>
</div>
